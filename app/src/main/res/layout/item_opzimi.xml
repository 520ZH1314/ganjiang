<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:background="@drawable/selector_account"
        android:orientation="vertical"
        android:padding="10.0dip">

        <TextView
            android:id="@+id/op_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="财神道"
            android:textColor="@color/Black202020"
            android:textSize="16.0sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3.0dip"
            android:layout_marginTop="3.0dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99.9%新手必选"
                android:textColor="@color/gray"
                android:textSize="13.0sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="年利率"
                android:textColor="@color/gray"
                android:textSize="13.0sp" />
        </LinearLayout>

        <View style="@style/solid_hor_view_E1E1E1" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginTop="6.0dip">

            <TextView
                android:id="@+id/tv_transfer_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平均历史年化收益"
                android:textColor="@color/gray"
                android:textSize="13.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36.0dip"
                android:layout_toRightOf="@+id/tv_transfer_year"
                android:text="封闭期"
                android:textColor="@color/gray"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/creaditor_tv_transfer_rate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_transfer_year"
                android:gravity="bottom"
                android:text="10%"
                android:textColor="@color/OrangeFD6600"
                android:textSize="20.0sp" />

            <TextView
                android:id="@+id/op_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="2.0dip"
                android:layout_toRightOf="@+id/creaditor_tv_transfer_rate"
                android:text="+5%"
                android:textColor="@color/OrangeFD6600"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/creaditor_tv_transfer_num"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="101.0dip"
                android:layout_toRightOf="@id/creaditor_tv_transfer_rate"
                android:gravity="bottom"
                android:text="365"
                android:textColor="@color/black"
                android:textSize="15.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/creaditor_tv_transfer_num"
                android:gravity="bottom"
                android:text="天"
                android:textColor="@color/gray"
                android:textSize="13.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_circle"
                android:gravity="center"
                android:text="抢购"
                android:textColor="@color/white"
                android:textSize="16.0sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="42.0dip"
        android:background="#ffffffff"
        android:textColor="#ff000000"
        android:visibility="gone" />
</LinearLayout>