<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="210.0dip"
                android:background="@mipmap/data_bg">

                <LinearLayout
                    android:id="@+id/ll_mine_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginTop="25.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_mine_tx"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        app:civ_border_color="#ffa5c0f6"
                        app:civ_border_width="3.0dip"
                        android:src="@mipmap/head_pic_default"
                        />

                    <TextView
                        android:id="@+id/tv_mine_nc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="干将金融  |  V1"
                        android:textColor="@color/white"
                        android:textSize="13.0sp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_mine_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_mine_ll"
                    android:layout_marginTop="10.0dip">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40.0dip"
                            android:layout_marginLeft="15.0sp"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_mine_bfb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10%"
                                android:textColor="@color/white"
                                android:textSize="24.0sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+5%"
                                android:textColor="@color/white"
                                android:textSize="12.0sp" />
                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/ck_mine_hide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15.0dip"
                            android:background="@null"
                            android:button="@null"
                            android:drawablePadding="10.0dip"
                            android:drawableRight="@drawable/checkbox_show_hide"
                            android:text="@string/xyhzx"
                            android:textColor="@color/BlueB4CBF7"
                            android:textSize="13.0sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_mine_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="25.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15.0dip"
                        android:background="@drawable/selector_mine"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/ljty"
                        android:textColor="@drawable/selector_mine_text"
                        android:textSize="15.0sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_mine_rl"
                    android:layout_marginTop="30.0dip">

                    <TextView
                        android:id="@+id/tv_mine_kyye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.0dip"
                        android:text="可用余额(元)"
                        android:textColor="@color/white"
                        android:textSize="13.0sp" />

                    <TextView
                        android:id="@+id/tv_mine_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginTop="-2.0dip"
                        android:layout_toRightOf="@id/tv_mine_kyye"
                        android:text="0.00"
                        android:textColor="@color/white"
                        android:textSize="17.0sp" />

                    <TextView
                        android:id="@+id/tv_mine_recharge"
                        style="@style/text_tixian_chongzhi"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15.0dip"
                        android:padding="10.0dip"
                        android:text="充值" />

                    <View
                        android:id="@+id/vw_mine_soild"
                        style="@style/solid_vertical_view"
                        android:layout_height="20.0dip"
                        android:layout_marginTop="9.0dip"
                        android:layout_toLeftOf="@id/tv_mine_recharge"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tv_mine_withdrawals"
                        style="@style/text_tixian_chongzhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/vw_mine_soild"
                        android:clickable="true"
                        android:padding="10.0dip"
                        android:text="提现" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_mine_radio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_mine_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10.0dip"
                    android:background="@color/OrangeFFEFE3"
                    android:src="@drawable/anmin_broadcast_orange" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/OrangeFFEFE3"
                    android:drawableRight="@mipmap/arrow_yellow_right"
                    android:gravity="center_vertical"
                    android:padding="10.0dip"
                    android:text="您有一张优惠券将于2017-11-12到期"
                    android:textColor="@color/OrangeFF8C00"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <View style="@style/solid_hor_view_E1E1E1" />

            <TextView
                style="@style/tv_mine_tz"
                android:text="我的投资" />

            <View style="@style/solid_hor_view_E1E1E1" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mlv_mine_investment"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="-0.00999999dip"
                android:divider="@color/transparent" />
            <View
                style="@style/solid_hor_view_E1E1E1"
                android:layout_marginTop="-1.0dip" />

            <TextView
                style="@style/text_anquan_gray"
                android:layout_marginBottom="6.0dip"
                android:layout_marginTop="6.0dip"
                android:drawableLeft="@mipmap/safe_icon"
                android:drawablePadding="6.0dip"
                android:gravity="center_vertical"
                android:text="@string/text_account" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>